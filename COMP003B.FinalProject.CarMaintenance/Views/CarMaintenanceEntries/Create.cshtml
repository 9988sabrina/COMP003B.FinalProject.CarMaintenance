@model COMP003B.FinalProject.CarMaintenance.Models.CarMaintenanceEntry

@{
    ViewData["Title"] = "Create";
}

<h1>Create Maintenance Entry</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CarId" class="control-label">Car</label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
            </div>

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <div class="form-group">
                <label asp-for="MechanicId" class="control-label">Mechanic</label>
                <select asp-for="MechanicId" class="form-control" asp-items="ViewBag.MechanicId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ServiceTypeId" class="control-label">Service Type</label>
                <select asp-for="ServiceTypeId" class="form-control" asp-items="ViewBag.ServiceTypeId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ServiceDate" class="control-label"></label>
                <input asp-for="ServiceDate" class="form-control" type="date" />
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
