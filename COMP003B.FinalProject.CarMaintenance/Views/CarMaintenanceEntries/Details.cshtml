@model COMP003B.FinalProject.CarMaintenance.Models.CarMaintenanceEntry

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Maintenance Entry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Car</dt>
        <dd class="col-sm-10">@Model.Car?.Make @Model.Car?.Model (@Model.Car?.Year)</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.FullName</dd>

        <dt class="col-sm-2">Mechanic</dt>
        <dd class="col-sm-10">@Model.Mechanic?.Name</dd>

        <dt class="col-sm-2">Service Type</dt>
        <dd class="col-sm-10">@Model.ServiceType?.Name</dd>

        <dt class="col-sm-2">Service Date</dt>
        <dd class="col-sm-10">@Model.ServiceDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">$@Model.Cost</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
